# Local Music Events - Environment Variables Template
# Copy this file to .env.local and update with your values

# Database Configuration - Update with your PostgreSQL connection string
DATABASE_URL="postgresql://username:password@localhost:5432/local_music_events"

# Authentication - Generate secure values for production
JWT_SECRET="your-jwt-secret-here"
ADMIN_EMAIL="admin@localmusic.com"
ADMIN_PASSWORD="your-admin-password"

# Next.js Configuration
NEXTAUTH_URL="http://localhost:3003"
NODE_ENV="development"

# Optional: File upload configuration
UPLOAD_DIR="./public/uploads"
MAX_FILE_SIZE="5242880"